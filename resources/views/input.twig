{{ asset_add("styles.css", "anomaly.field_type.geocoder::less/input.less") }}
{{ asset_add("scripts.js", "https://maps.google.com/maps/api/js?sensor=false&key=" ~ field_type.key) }}
{{ asset_add("scripts.js", "anomaly.field_type.geocoder::js/input.js") }}

<input
        type="text"
        class="address form-control"
        value="{{ field_type.value.address }}"
        name="{{ field_type.input_name }}[address]"
        {{ html_attributes(field_type.attributes) }}
        placeholder="{{ trans(field_type.placeholder) ?: '9520 Emerald Walk, Alice Beach, NY' }}">

<div
        class="geocoder-map"
        style="height: {{ field_type.config.height }}px; width: 100%; {{ field_type.config.show_map == false ? 'display: none;' }}"
        data-zoom="{{ field_type.config.zoom }}"></div>

<small class="text-muted match">
    {{ field_type.value.formatted }}
</small>

{% include "anomaly.field_type.geocoder::partials/data" %}
