{{ asset_add("scripts.js", "https://maps.google.com/maps/api/js?sensor=false") }}
{{ asset_add("scripts.js", "anomaly.field_type.geocoder::js/input.js", ["debug"]) }}
{{ asset_add("styles.css", "anomaly.field_type.geocoder::less/geocoder.less", ["debug"]) }}

<div class="input-group">

    <span class="input-group-addon">
        <i class="fa fa-map-marker"></i>
    </span>

    <input
            type="text"
            class="address form-control"
            value="{{ field_type.value }}"
            name="{{ field_type.input_name }}"
            placeholder="{{ trans(field_type.placeholder) ?: '9520 Emerald Walk, Alice Beach, IL, 61013, US' }}">
</div>

<div class="geocoder-map img-rounded" style="height: 400px; width: 100%;"></div>

<div class="row">
    <div class="col-lg-12">

        <div class="input-group">
        <span class="input-group-addon">
            {{ icon('arrows-v') }}
        </span>

            <input
                    type="text"
                    class="latitude form-control"
                    name="{{ field_type.input_name }}[latitude]"
                    placeholder="{{ trans(field_type.placeholder) ?: 'Latitude' }}">
        </div>
    </div>
    <div class="col-lg-12">

        <div class="input-group">
        <span class="input-group-addon">
            {{ icon('arrows-h') }}
        </span>

            <input
                    type="text"
                    class="longitude form-control"
                    name="{{ field_type.input_name }}[longitude]"
                    placeholder="{{ trans(field_type.placeholder) ?: 'Longitude' }}">
        </div>
    </div>
</div>
